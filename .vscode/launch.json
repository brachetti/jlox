    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch with Arguments Prompt",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.lox.Lox",
            "args": "${command:SpecifyProgramArgs}",
            "projectName": "lox"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Lox",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.lox.Lox",
            "projectName": "lox"
        },
        {
            "type": "java",
            "name": "Launch GenerateAst",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.tools.GenerateAst",
            "projectName": "lox"
        },
        {
            "type": "mvn",
            "name": "Run Tests",
            "request": "test",
            "projectName": "lox"
        }
    ]
}